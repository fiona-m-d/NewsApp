<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/list_margin_vertical"
    android:paddingLeft="@dimen/list_margin_sides"
    android:paddingRight="@dimen/list_margin_sides"
    android:background="@color/background">

    <TextView
        android:id="@+id/section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/text_colour"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_colour"
        android:textSize="@dimen/title_text"
        android:paddingTop="@dimen/title_side_padding"
        android:paddingBottom="@dimen/title_side_padding" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_margin">

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_colour"
            android:textSize="@dimen/secondary_text" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_colour"
            android:textSize="@dimen/secondary_text" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/divider_margin"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginTop="@dimen/bottom_margin"
        android:layout_height="1dp"
        android:background="@color/text_colour"/>
</LinearLayout>